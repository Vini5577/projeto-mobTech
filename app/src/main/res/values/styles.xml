<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedimageview" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

    <style name="roundedimageActor" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">150dp</item>
    </style>

    <style name="roundedrecomedation" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- other theme attributes -->
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>

    <style name="MyTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="MyTextViewStyle.Bold">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="MyTextViewStyleSelector" parent="@style/MyTextViewStyle">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MyTextViewStyleSelector.Bold" parent="@style/MyTextViewStyle.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme." parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- other theme attributes -->
        <item name="android:textViewStyle">@style/MyTextViewStyleSelector</item>
    </style>
</resources>